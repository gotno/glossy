<div class="row">
  <div class="col-md-12 section-edit">
    <div class="input-group input-group-lg">
      <input type="text"
             id="section_title"
             class="section-title form-control"
             placeholder="section title"
             <% if (section.has('title')) { %>
               value="<%= section.escape('title') %>"
             <% } %>
             <% if (!section.get('show_title')) { %>
               disabled
             <% } %>
      >
      <span class="input-group-addon">
        <input type="checkbox"
               id="show_section_title"
               <% if (section.has('show_title')) { %>
               checked
               <% } %>
        >
      </span>
    </div>
  </div>
</div>

<div class="row">
  <ul class="col-md-12 widgets-list"></ul>
</div>

<div class="row">
  <div class="col-md-3 col-md-offset-9 btn-group">
    <button type="button"
            class="btn btn-default section-add-text">add text</button>
    <button type="button"
            class="btn btn-default section-add-image">add image</button>
    <button type="button"
            data-id="<%= section.id %>"
            class="btn btn-danger destroy-section">remove section</button>
  </div>
</div>
