<div class="row article-show-title">
  <div class="col-md-12">
    <% if (article.has('title') && !article.get('hide_title')) { %>
      <h1><%= article.escape('title') %></h1>
    <% } %>
  </div>
</div>
<div class="row article-show-body">
  <div class="col-md-12">
    <% if (article.has('body') && !article.get('hide_body')) { %>
      <p><%= article.escape('body') %></p>
    <% } %>
  </div>
</div>

<div class="sections-container">
</div>
