<div class="row">
  <div class="col-md-3">
    <% if (widget.has('image_url_smallest')) { %>
      <img src="<%= widget.escape('image_url_smallest') %>">
    <% } %>
  </div>
</div>

<% var ord = widget.get('ord') %>
<div class="row">
  <div class="col-md-3">
    <input type="file"><br>
  </div>
</div>

<div class="row">
  <div class="col-md-3">
    <div class="input-group image-widget-title">
      <input type="text"
             class="image-widget-title form-control"
             id="iw_title"
             placeholder="title"
             <% if (widget.has('title')) { %>
               value="<%= widget.escape('title') %>"
             <% } %>
             <% if (widget.get('hide_title')) { %>
               disabled
             <% } %>
             >
      <span class="input-group-addon">
        <input type="checkbox"
               id="iw_hide_title"
               <% if (widget.get('hide_title')) { %>
                 checked
               <% } %>
               >
        <!--<label for="iw_hide_title<%= ord %>">hide title?</label>-->
      </span>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-3">
    <div class="input-group">
      <input type="date"
             class="image-widget-date form-control"
             id="iw_date"
             <% if (widget.has('date')) { %>
               value="<%= widget.escape('date') %>"
             <% } %>
             <% if (widget.get('hide_date')) { %>
               disabled
             <% } %>
      >
      <span class="input-group-addon">
        <!--<label for="iw_hide_date<%= ord %>">hide date?</label>-->
        <input type="checkbox"
               id="iw_hide_date"
               <% if (widget.get('hide_date')) { %>
                 checked
               <% } %>
        >
      </span>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-3">
    <a href="#" class="image-widget-remove">remove image</a>
  </div>
</div>
