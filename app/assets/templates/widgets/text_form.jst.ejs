<div class="row">
  <div class="col-md-12">
    <div class="input-group text-widget-title-container">
      <input type="text"
             placeholder="heading"
             class="form-control text-widget-title"
             id="tw_title"
             <% if (widget.has('title')) { %>
               value="<%= widget.escape('title') %>"
             <% } %>
             <% if (widget.get('hide_body')) { %>
               disabled
             <% } %>
             >
      <span class="input-group-addon">
        <% var icon = (widget.get('hide_title')) ? "fa-eye-slash" : "fa-eye" %> 
        <i id="tw_hide_title"
           class="fa <%= icon %> show-hide"
           type="checkbox"></i>
      </span>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="input-group text-widget-body-container">
      <textarea class="form-control text-widget-body" 
                placeholder="body"
                id="tw_body"
                rows="8"
                <% if (widget.get('hide_body')) { %>
                  disabled
                <% } %>
                ><% if (widget.has('body')) { %><%= widget.escape('body') %><% } %></textarea>
      <span class="input-group-addon">
        <% var icon = (widget.get('hide_body')) ? "fa-eye-slash" : "fa-eye" %> 
        <i id="tw_hide_body"
           class="fa <%= icon %> show-hide"
           type="checkbox"></i>
      </span>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <a href="#" class="text-widget-remove">remove text</a>
  </div>
</div>
