<% var ord = widget.get('ord') %>
<div class="row">
  <div class="col-md-12">
    <div class="input-group input-group-lg text-widget-title">
      <input type="text"
             placeholder="heading"
             class="text-widget-title form-control"
             id="tw_title"
             <% if (widget.has('title')) { %>
               value="<%= widget.escape('title') %>"
             <% } %>
             <% if (widget.get('hide_body')) { %>
               disabled
             <% } %>
             >
      <span class="input-group-addon">
        <!--<label for="tw_hide_title<%= ord %>">hide?</label>-->
        <input type="checkbox"
               id="tw_hide_title"
               <% if (widget.get('hide_title')) { %>
                 checked
               <% } %>
               >
      </span>
    </div>
  </div>

</div>

<div class="row">
  <div class="col-md-12">
    <div class="input-group input-group-lg">
      <textarea class="text-widget-body form-control" 
                placeholder="body"
                id="tw_body"
                <% if (widget.get('hide_body')) { %>
                  disabled
                <% } %>
                ><% if (widget.has('body')) { %><%= widget.escape('body') %><% } %></textarea>
      <span class="input-group-addon">
        <!--<label for="tw_hide_body<%= ord %>">hide?</label>-->
        <input type="checkbox"
               id="tw_hide_body"
               <% if (widget.get('hide_body')) { %>
                 checked
               <% } %>
               >
      </span>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2 col-md-offset-9">
      <a href="#" class="text-widget-remove">remove text</a>
    </div>
  </div>
</div>
