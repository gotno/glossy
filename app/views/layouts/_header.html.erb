<header>
  <span class="logo">glossy</span>
  <nav class="session">
    <ul>
      <% if logged_in? %>
        <li><%= button_to "Sign Out", session_url, method: :delete %></li>
        <li>You are signed in as <%= current_user.username %>.</li>
        <li>
          <%= link_to "New Article", new_user_article_url(current_user) %>
        </li>
      <% else %>
        <li><%= link_to "Sign In", new_session_url %></li>
        <li><%= link_to "New User", new_user_url %></li>
      <% end %>
    </ul>
  </nav>
</header>
