<section>
  <hr>
  <% unless section.hide_title %>
    <div class="row">
      <div class="col-md-12">
        <h2><%= section.title.html_safe %></h2>
      </div>
    </div>
  <% end %>

  <%= render section.rows %>

  <%# section.widgets.each do |widget| %>
    <%=# render widget, widget: widget %>
  <%# end %>
</section>
