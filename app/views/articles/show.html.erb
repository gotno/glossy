<article>
  <div class="row">
    <div class="col-md-12">
      <% if @article.show_title %>
        <h1><%= @article.title %></h1>
      <% end %>

      <% if @article.show_body %>
        <p><%= @article.body.html_safe %></p>
      <% end %>
    </div>
  </div>
  <%= render @article.sections %>
</article>
